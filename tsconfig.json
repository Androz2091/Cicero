{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2015",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist/"
    },
    "types": [ "node" ],
    "include": [
        "Cicero.ts",
        "./commands/**/*",
        "./helpers/**/*"
    ]
}